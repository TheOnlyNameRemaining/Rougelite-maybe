--[[
Create save mechanic
Make UI that checks off tasks
Make random number generator that grabs tasks associated
with each number
Make timer for amount of time taken on each project
and total time
]]

timer = 0

quitTimer = 10

letquit = false

function love.quit()
    if letquit then
        return false
    else
        return true
    end
end

function saveGame()

    data = {}
    data.timer = timer

    serialized = lume.serialize(data)
    -- The filetype actually doesn't matter, and can even be omitted.
    love.filesystem.write("savedata.txt", serialized)

end

function love.keypressed(key)
    if key == "f1" then
        saveGame()
        quitTimer = 10
        love.event.quit()
    end

end

function love.load()

    lume = require "lume"

    if love.filesystem.getInfo("savedata.txt") then
        file = love.filesystem.read("savedata.txt")
        data = lume.deserialize(file)

        --Apply the saved info
        timer = data.timer

    end

end

function love.update(dt)

    timer = timer + dt

    quitTimer = quitTimer - dt

    quitTimer = quitTimer - dt 
        if quitTimer >= 0 then
        letquit = true
        else letquit = false
    end

end

function love.draw()

    love.graphics.print(timer, 400, 400)

end
